<!-- Product details page -->
<!DOCTYPE html>
<html>
<head>
    <title>Product Details</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1 class="title">Online Shop</h1>
        <!-- View Cart -->
        <div class="cart-button">
            <a class="view-cart-text" href="/cart">View Cart</a>
        </div>

        <!-- Search Form -->
        <form class="search-form" action="/search" method="GET">
            <input class="search-input" type="text" name="query" placeholder="  Search products...">
            <button class="search-btn" type="submit">Search</button>
        </form>
    </div>

    <!-- Item information -->
    <h1><%= product.name %></h1>
    <p>Price: $<%= product.price %></p>
    <p>Quantity: 
    <% if(product.quantity === 0) { %>
        Out of stock
    <% } else { %>
    Only <%= product.quantity%> left!
    <% } %>
    </p>
    <p>Description: <%= product.description %></p>
    <p>Rating: <% if(product.rating_sum === 0 || product.rating_count === 0) { %>
                    No ratings yet
                <% } else { %>
                    <%= product.rating_sum / product.rating_count %> / 5
                <% } %></p>      
    </p>   

    <!-- Add to cart form -->
    <form id="addToCartForm" action="/cart/add" method="POST">
        <input type="hidden" name="productId" value="<%= product.id %>">
        <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>">
        <button type="submit">Add to Cart</button>
    </form>

    <!-- Message div -->
    <div id="message" style="display: none;"></div>

    <a href="/">Back to Home</a>

    <script src="/js/add_to_cart.js"></script>
</body>
</html>
